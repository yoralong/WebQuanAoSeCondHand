
@using Web_Bán_Quần_Áo_SecondHand.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Web_Bán_Quần_Áo_SecondHand.Models.SanPham>


@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<p>
    <h3 style="font-size:26pt;font-family:Tahoma">Quản Lý Sản Phẩm</h3>
    <div style="padding-left:15px"><i class="fas fa-plus"></i> @Html.ActionLink("Thêm sản phẩm", "Create")</div>

</p>
<table class="table" >
    <tr>
        <th style="border:double">
            MaLoai
        </th>
        <th style="border:double">
            MaTH
        </th>
        <th style="border:double">
            TenSP
        </th>
        <th style="border:double">
            DonGia
        </th>
        <th style="border:double">
            NgayNhap
        </th>
        <th style="border:double">
            Image
        </th>
        <th style="border:double">
            Details
        </th>
        <th style="border:double">
            SoLuongTon
        </th>
        <th style="border:double"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border:double">
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td style="border:double">
                @Html.DisplayFor(modelItem => item.MaTH)
            </td>
            <td style="border:double">
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td style="border:double">
                @String.Format("{0:0,0}₫", item.DonGia)
            </td>
            <td style="border:double">
                @Html.DisplayFor(modelItem => item.NgayNhap)
            </td>
            <td style="border:double">
                <img src="@item.Image" style="width:180px; height: 180px;" />
            </td>
            <td style="border:double">
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td style="border:double">
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td style="border:double">
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }

</table>
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Sanpham", new { page = page }))
</div>
<style>
    .MenuTrang * {
        display: flex;
        color: black;
        justify-content: center;
        font-size: 16pt;
        padding:5px;
    }
</style>