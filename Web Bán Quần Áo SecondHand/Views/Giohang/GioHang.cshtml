    <link href="~/Content/responsive.css" rel="stylesheet" />
</head>
<body>
    <div id="fb-root"> </div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v11.0" nonce="DRnzoawa"></script>
    <!-- Header Start -->
    <header class="position-absolute w-100">
        <div class="container">
            <div class="top-header d-none d-sm-flex justify-content-between align-items-center">
                <div class="contact">
                    <a href="tel:+1234567890" class="tel"><i class="fa fa-phone" aria-hidden="true"></i>+0586051405</a>
                    <a href="mailto:info@yourmail.com">
                        <i class="fa fa-envelope"
                           aria-hidden="true"></i>calashopsh@gmail.com
                    </a>
                </div>
                <nav class="d-flex aic">
                    <a href="@Url.Action("Dangnhap","Nguoidung")" " class="login"><i class="fa fa-user" aria-hidden="true"></i>Login</a>
                    <ul class="nav social d-none d-md-flex">
                        <li><a href="https://www.facebook.com/CALA-Ti%E1%BB%87m-2hand-104941784794471" target="_blank"><i class="fa fa-facebook"></i></a></li>

                        <li><a href="https://www.instagram.com/_cala.2hand/" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </nav>
            </div>
            <nav class="navbar navbar-expand-md navbar-light">
                <a class="navbar-brand" href="index.html"><img src="#" alt="Multipurpose"></a>
                <div class="group d-flex align-items-center">
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <a class="cart" href="@Url.Action("GioHang","GioHang")"><i class="fa fa-shopping-cart" aria-hidden="true"></i>@Html.Action("GiohangPartial", "Giohang")</a>
                </div>
                <a class="search-icon d-none d-md-block" href="#"><i class="fa fa-search"></i></a>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","ShopSecondHand")">Home</a></li>

                        <li>@Html.Action("BoSuuTap", "ShopSecondHand")</li>

                        <li class="nav-item"><a class="nav-link" href="@Url.Action("aboutus","ShopSecondHand")">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Xin Chào @Session["Taikhoan"]</a></li>

                    </ul>
                    <form class="bg-white search-form" method="get" id="searchform">
                        <div class="input-group">
                            <input class="field form-control" id="s" name="s" type="text" placeholder="Search">
                            <span class="input-group-btn">
                                <input class="submit btn btn-primary" id="searchsubmit" name="submit" type="submit"
                                       value="Search">
                            </span>
                        </div>
                    </form>
                </div>
            </nav>
        </div>
    </header>

    <!-- Header End -->
    <!-- Gio hang -->
    <div class="addcart" style="padding-top:150px; padding-bottom:50px;padding-left:400px">

        <h2 style="text-align:center;font-weight:bold">THÔNG TIN GIỎ HÀNG</h2>
        <table align="center" border="1">
            <tr style="text-align:center;font-weight:bold">
                <td>Mã sản phẩm</td>
                <td>Tên sản phẩm</td>
                <td width="250px">Ảnh sản phẩm</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
                <td width="70px"></td>
                <td width="70px"></td>
                <td width="70px"></td>


            </tr>
            @foreach (var item in Model)
            {
                <tr style="text-align:center;font-weight:bold">
                    <td>@item.MaSP </td>
                    <td>@item.TenSP</td>
                    <td width="250px"><img src="@item.Image"></td>
                    @using (Html.BeginForm("CapnhapGiohang", "Giohang", new { @masp = item.MaSP }))
                    {
                        <td>
                            <input type="number" min="1" name="txtSoluong" value="@item.Soluong" style="background-color:antiquewhite;border:double" />
                        </td>
                        <td>@String.Format("{0:0,0}", item.DonGia)</td>
                        <td>@String.Format("{0:0,0}", item.ThanhTien)</td>
                        <td width="70px"><a href="@Url.Action("Details","ShopSecondHand", new { id = item.MaSP})">Chi tiết</a></td>
                        <td width="70px"> @Html.ActionLink("Xóa", "XoaGiohang", new { @masp = item.MaSP }) </td>
                        <td width="70px"><input type="submit" value="Cập nhập" border="1" style="background-color:antiquewhite;border:double" /></td>
                    }

                </tr>
            }
            <tr style="font-weight:bold;text-align:center;color:red">
                <td colspan="4"> Số lượng sản phẩm: @ViewBag.Tongsoluong</td>
                <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", @ViewBag.Tongtien)</td>
            </tr>
            <tr style="font-weight:bold;text-align:right;color:blue">
                <td colspan="9">
                    @Html.ActionLink("Xóa tất cả giỏ hàng", "XoatatcaGiohang")
                </td>
            </tr>
            <tr style="font-weight:bold;text-align:right;color:red">
                <td colspan="9"> Đặt hàng</td>

            </tr>
        </table>

    </div>

    <!-- Gio hang -->
        <!--footer-->
        <div class="footer" >
            <div class="container">
                <div class="row">
                    <!--Phần download app-->
                    <div class="footer-col-1">
                        <h3>HỔ TRỢ KHÁCH HÀNG</h3>
                        <ul class="list-unstyled mb-0">
                            <li><a href="@Url.Action("huongdanmuahang","ShopSecondHand")" title="Hướng dẫn mua hàng" style="color: white; font-family: Tahoma; padding: 0px 15px 10px; ">Hướng dẫn mua hàng</a></li>
                            <p>
                            <li><a href="/pages/thanh-toan" title="Thanh toán" style="color: white; font-family: Tahoma; padding: 0px 15px 10px; ">Thanh toán & Vận chuyển </a></li>
                            </p>
                            <p>
                            <li><a href="/pages/chinh-sach-bao-hanh" title="Chính sách bảo hành" style="color: white;font-family:Tahoma; padding: 0px 15px 10px;">Chính sách bảo hành & đổi trả</a><br /></li>
                            </p>

                        </ul>
                    </div>
                    <!--Usefull link-->
                    <div class="footer-col-3">
                        <h3>Hệ Thống Cửa Hàng</h3>
                        <ul>

                            <li><i class="fa fa-map-marker" aria-hidden="true" style="padding-right:10px"></i>Chi nhánh 1:69/7B Nguyễn Gia Trí,Quận Bình Thạnh,TP.HCM</li>

                        </ul>
                    </div>

                    <!--Follow us-->
                    <div class="footer-col-4">
                        <h3>FOLLOW FANPAGE</h3>
                        <!--API-->
                        <div class="fb-page" data-href="https://www.facebook.com/CALA-Ti%E1%BB%87m-2hand-104941784794471/" data-tabs="timeline" data-width="340" data-height="130" data-small-header="false" data-adapt-container-width="false" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/CALA-Ti%E1%BB%87m-2hand-104941784794471/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/CALA-Ti%E1%BB%87m-2hand-104941784794471/">CALA. Tiệm 2hand</a></blockquote></div>

                    </div>

                </div>
                <!--chan footer-->
                <hr>
                <p class="copyright">copyright 2021 - CALA Team</p>
            </div>
        </div>
        <!--End footer-->
    </body>
</html>
